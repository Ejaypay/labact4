<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <!-- Main ScrollView to hold all content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Pet Match -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="30dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Pet"
                        android:textColor="#717171"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Match."
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Search Bar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#A9A5A5"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <!-- Search Icon -->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/search" />

                        <!-- Search Input Field -->
                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="Search"
                            android:textColor="@color/black"
                            android:textColorHint="#717171"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Filter/Settings Icon -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/setting" />
            </LinearLayout>

            <!-- Horizontal Scroll for Tabs -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/tabLayout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- Individual Tabs with hover effect -->
                    <TextView
                        android:id="@+id/tabAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="All"
                        android:textSize="16sp"
                        android:textColor="#717171"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/tabFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Food"
                        android:textSize="16sp"
                        android:textColor="#717171"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/tabToys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Toys"
                        android:textSize="16sp"
                        android:textColor="#717171"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/tabComfort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Comfort"
                        android:textSize="16sp"
                        android:textColor="#717171"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/tabGrooming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grooming"
                        android:textSize="16sp"
                        android:textColor="#717171"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Flash Sale CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="#F73394"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flash Sale - Limited Sale!"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up to 50% off on selected pet Essentials"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="70dp" />
            </androidx.cardview.widget.CardView>

            <!-- Shop by Platform Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Shop by Platform"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <!-- Lazada Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#FFF0DD"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="monospace"
                        android:text="Lazada Deals"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Shipping Available"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="40dp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="90dp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif"
                        android:text="Browse Lazada"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        app:cornerRadius="60dp" />
                </androidx.cardview.widget.CardView>

                <!-- Shopee Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#FFE8E8"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="monospace"
                        android:text="Shopee Finds"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="45dp"
                        android:text="Mega Sale Discounts" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="90dp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif"
                        android:text="Browse Shopee"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        app:cornerRadius="60dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Trending Product Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending Product"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Card for Trending Product -->
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    app:cardCornerRadius="15dp"
                    android:layout_height="400dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="45dp"
                        android:layout_height="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="300dp"
                        android:backgroundTint="#F0B100"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="15dp"
                            android:text="Grain Free"
                            android:textColor="@color/black"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="3dp"
                            android:textSize="5sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="320dp"
                        android:backgroundTint="#F0B100"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="15dp"
                            android:text="Protein"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="7sp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:src="@drawable/dogfud"
                        android:layout_marginTop="-10dp" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="15dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#FB2C36"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="15dp"
                                android:text="-25%"
                                android:textColor="@color/white"
                                android:layout_marginLeft="6dp"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="15dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#F0B100"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="15dp"
                                android:text="Flash"
                                android:textColor="@color/black"
                                android:layout_marginLeft="9dp"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Premuim Dog Food - Adult Formula"
                        android:layout_marginTop="130dp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="$32.99"
                        android:layout_marginTop="180dp"
                        android:fontFamily="monospace"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="829 sold • 45 in stock"
                        android:layout_marginTop="200dp"
                        android:fontFamily="monospace"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="250dp"
                        android:layout_marginLeft="10dp"
                        android:text="Buy Now"
                        android:textSize="8dp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="400dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="45dp"
                        android:layout_height="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="320dp"
                        android:backgroundTint="#F0B100"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="15dp"
                            android:text="Equipment"
                            android:textColor="@color/black"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="3dp"
                            android:textSize="5sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="45dp"
                        android:layout_height="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="300dp"
                        android:backgroundTint="#F0B100"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="15dp"
                            android:text="Groom"
                            android:textColor="@color/black"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="3dp"
                            android:textSize="5sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>


                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:src="@drawable/groom"
                        android:layout_marginTop="-20dp"/>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="15dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#FB2C36"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="15dp"
                                android:text="-15%"
                                android:textColor="@color/white"
                                android:layout_marginLeft="6dp"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="15dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#F0B100"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="15dp"
                                android:text="Flash"
                                android:textColor="@color/black"
                                android:layout_marginLeft="9dp"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Professional Grooming Kit"
                        android:layout_marginTop="130dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="$55.99"
                        android:layout_marginTop="180dp"
                        android:fontFamily="monospace"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8156 sold • 23 in stock"
                        android:layout_marginTop="200dp"
                        android:fontFamily="monospace"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="250dp"
                        android:text="Buy Now"
                        android:layout_marginLeft="10dp"
                        android:textSize="8dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:padding="16dp">

        <!-- Heart Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart"
            android:layout_weight="1"/>

        <!-- Market Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/market"
            android:layout_weight="1"/>

        <!-- Settings Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/setting1"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>
